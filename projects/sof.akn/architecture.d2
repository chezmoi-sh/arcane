# ------------------------------------------------------------------------------------------------
# üîó Connections
# ------------------------------------------------------------------------------------------------

# System connections
sof.system.Tailscale <- tailnet: {class: [connect-from-vpn-backbone; undeployed]}
sof.system.kgateway <- localnet: {
  source-arrowhead: |md
    HTTP (80)
    HTTPS (443)
  |
  class: undeployed
}
sof.system.cert-manager -> internet: HTTPS (443) {class: [connect-to-internet; undeployed]}
sof.system.External-DNS -> UDM-Pro: DNS updates {class: undeployed}

# Media services connections
sof.media.Jellyfin <- sof.system.kgateway: { source-arrowhead: HTTP (8096); class: undeployed }
sof.media.Jellyfin <- sof.system.Tailscale: { source-arrowhead: HTTP (8096); class: [connect-from-vpn; undeployed] }
sof.media.Jellyfin <- sof.media.Jellyseerr: { source-arrowhead: HTTP (8096); class: undeployed }
sof.media.Jellyseerr <- sof.system.kgateway: { source-arrowhead: HTTP (5055); class: undeployed }
sof.media.Jellyseerr <- sof.system.Tailscale: { source-arrowhead: HTTP (5055); class: [connect-from-vpn; undeployed] }

# Life management connections
sof.life.Actual-Budget <- sof.system.kgateway: { source-arrowhead: HTTP (5006); class: undeployed }
sof.life.Actual-Budget <- sof.system.Tailscale: { source-arrowhead: HTTP (5006); class: [connect-from-vpn; undeployed] }
sof.life.Paperless <- sof.system.kgateway: { source-arrowhead: HTTP (8000); class: undeployed }
sof.life.Paperless <- sof.system.Tailscale: { source-arrowhead: HTTP (8000); class: [connect-from-vpn; undeployed] }

# Other services connections
sof.others.Linkding <- sof.system.kgateway: { source-arrowhead: HTTP (9090); class: undeployed }
sof.others.Linkding <- sof.system.Tailscale: { source-arrowhead: HTTP (9090); class: [connect-from-vpn; undeployed] }

sof.others.Atuin <- sof.system.kgateway: { source-arrowhead: HTTP (8888); class: undeployed }
sof.others.Atuin <- sof.system.Tailscale: { source-arrowhead: HTTP (8888); class: [connect-from-vpn; undeployed] }

sof.others.TaskChampion <- sof.system.kgateway: { source-arrowhead: HTTP (8080); class: undeployed }
sof.others.TaskChampion <- sof.system.Tailscale: { source-arrowhead: HTTP (8080); class: [connect-from-vpn; undeployed] } 
