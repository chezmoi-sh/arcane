import error_pages.Caddyfile

{
	admin off
	http_port 8080

	storage file_system {
		root /var/lib/caddy
	}
}

# -- Enable Caddy metrics on this specific port (not open externally)
:2019 {
	handle / {
		metrics
	}
}

:8080 {
        handle / {
                respond "Hello, world!"
        }

        handle /404 {
                reverse_proxy localhost:8081 {
                        import error_pages
                }
        }
}

:8081 {
        respond 404
}
