{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "outDir": "bin",
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2022"
    },
    "include": ["**/*.ts"]
}
