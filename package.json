{
    "name": "atlas.chezmoi.sh",
    "version": "0.0.0",
    "private": true,
    "description": "Personal homelab infrastructure as-code",
    "repository": "https://github.com/chezmoi-sh/atlas",
    "license": "Apache-2.0",
    "author": "Alexandre Nicolaie <xunleii@users.noreply.github.com>",
    "workspaces": [
        "catalog",
        "catalog/**/*",
        "projects/*",
        "scripts/src/**/*",
        "src/core",
        "src/policy-pack",
        "src/policy-pack/*"
    ],
    "scripts": {
        "test": "vitest run",
        "test:catalog": "VITEST_RUN_TYPE=integration:docker vitest run catalog",
        "test:catalog:docker": "VITEST_RUN_TYPE=integration:docker vitest run catalog",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "dependencies": {
        "@pulumi/docker": "^4.5.4",
        "@pulumi/docker-build": "^0.0.3",
        "@pulumi/pulumi": "^3.121.0",
        "node-fetch": "2.7.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/cz-commitlint": "^19.2.0",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@trunkio/launcher": "^1.3.1",
        "@types/inquirer": "^9.0.7",
        "@types/node": "^20.14.9",
        "@types/node-fetch": "^2.6.11",
        "@vitest/coverage-istanbul": "^1.6.0",
        "@vitest/coverage-v8": "^1.6.0",
        "@vitest/ui": "^1.6.0",
        "commitizen": "^4.3.0",
        "inquirer": "9.3.2",
        "nock": "^13.5.4",
        "prettier": "^3.3.2",
        "ts-node": "^10.9.2",
        "tsx": "^4.16.0",
        "typescript": "^5.5.3",
        "vitest": "^1.6.0"
    },
    "packageManager": "yarn@4.3.0"
}
